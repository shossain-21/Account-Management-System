@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mt-5">
    <!-- Added top margin -->
    <div class="col-md-6 offset-md-3 rounded border p-4">
        <section>
            <h2 class="text-center mb-3">LogIn to Qcounts</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form id="account" method="post">
                <div class="mb-3 row align-items-center">
                    <label class="col-sm-3 col-form-label text-start">Email</label>
                    <div class="col-sm-9">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row align-items-center">
                    <label class="col-sm-3 col-form-label text-start">Password</label>
                    <div class="col-sm-9">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-9 offset-sm-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary me-2">Log In</button>
                        <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <a class="btn btn-link" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

